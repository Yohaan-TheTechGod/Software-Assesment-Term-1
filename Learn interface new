import tkinter as tk
from tkinter import Toplevel, Label
from PIL import Image, ImageTk  # Import for image resizing

# Function to close the window
def close_window():
    root.destroy()

# Function to open an ADD INFORMATION HERE!! information window
def show_element_info(element_name, element_info):
    info_window = Toplevel()
    info_window.title(element_name)
    Label(info_window, text=f"{element_name}\n\n{element_info}", padx=20, pady=20).pack()
    #info_window.destroy(100)
    #root.after(10000, close_window)

# Main application window
root = tk.Tk()
root.title("Learning Page")

# Header
header = Label(root, text="Learn all about these Alkali Metals", font=("Arial", 24, "bold"), pady=10)
header.pack()

# Element data
elements = {
    "Lithium": "ADD INFORMATION HERE!!",
    "Sodium": " ADD INFORMATION HERE!!",
    "Potassium": "ADD INFORMATION HERE!!",
    "Rubidium": "ADD INFORMATION HERE!!",
    "Caesium": "ADD INFORMATION HERE!!",
    "Francium": "ADD INFORMATION HERE!!",
}

# Paths to element images
element_images = {
    "Lithium": "Lithium.png",  
    "Sodium": "Sodium.png",
    "Potassium": "Potassium.png",
    "Rubidium": "Rubidium.png",
    "Caesium": "Caesium.png",
    "Francium": "Francium.png",
}

# Displaying buttons with resized images for elements
for element_name, element_info in elements.items():
    # Load and resize the image
    original_image = Image.open(element_images[element_name])
    resized_image = original_image.resize((108, 108))
    resized_image# Resize to 108x108 pixels
    image = ImageTk.PhotoImage(resized_image)
    
    # Create button with resized image
    button = tk.Button(root, image=image, command=lambda e=element_name, i=element_info: show_element_info(e, i))
    button.image = image  # Keep a reference to the image to prevent garbage collection
    button.pack(pady=5)
 
root.mainloop()